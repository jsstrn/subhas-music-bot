{
  "name": "subhas-music-bot",
  "version": "1.0.0",
  "description": "A bot for local artists to share their music",
  "private": true,
  "scripts": {
    "start": "npx ts-node-dev --require dotenv/config src/index.ts",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "eslint": "eslint .",
    "eslint:fix": "npm run eslint -- --fix",
    "lint": "npm run format && npm run eslint",
    "lint:fix": "npm run format:fix && npm run eslint:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run lint && npm run test:coverage",
    "_prune": "serverless prune --number 2 --stage $STAGE",
    "prune:dev": "STAGE=dev npm run _prune",
    "prune:stage": "STAGE=stage npm run _prune",
    "prune:prod": "STAGE=prod npm run _prune",
    "_deploy": "serverless deploy --verbose --stage $STAGE",
    "deploy:debug": "SLS_DEBUG=* npm run deploy:dev",
    "deploy:dev": "STAGE=dev npm run _deploy",
    "deploy:stage": "STAGE=stage npm run _deploy",
    "deploy:prod": "STAGE=prod npm run _deploy",
    "deploy-to-dev": "npm run prune:dev && npm run deploy:dev",
    "deploy-to-stage": "npm run prune:stage && npm run deploy:stage",
    "deploy-to-prod": "npm run prune:prod && npm run deploy:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsstrn/subhas-music-bot.git"
  },
  "author": "Jesstern Rays <jsstrn@users.noreply.github.com>",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/jsstrn/subhas-music-bot/issues"
  },
  "homepage": "https://github.com/jsstrn/subhas-music-bot#readme",
  "dependencies": {
    "flagsmith-nodejs": "^1.1.0",
    "telegraf": "^4.3.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.77",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "aws-lambda": "^1.0.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.5",
    "prettier": "^2.3.1",
    "serverless-dotenv-plugin": "^3.9.0",
    "serverless-offline": "^7.0.0",
    "serverless-prune-plugin": "^1.5.0",
    "serverless-webpack": "^5.5.1",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2"
  }
}
